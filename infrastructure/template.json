{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string"
    }
  },
  "variables": {
    "apimName": "[concat('PWS-SYD-APIM-',coalesce(parameters('environment'), ''),'CICD')]",
    "storageName": "[concat('pwssydsta',coalesce(parameters('environment'), ''),'cicd')]",
    "keyVaultName":"[concat('pwssydsta',coalesce(parameters('environment'), ''),'cicd2')]",
    "publisherEmail": "paul.smithdale@insight.com",
    "publisherName": "Paul Smithdale",
    "skuName": "Developer",
    "containerName": "templatedeployment"
  },
  "resources": [
    {
      "name": "[variables('apimName')]",
      "type": "Microsoft.ApiManagement/service",
      "apiVersion": "2019-01-01",
      "tags": {},
      "properties": {
        "notificationSenderEmail": "[variables('publisherEmail')]",
        "publisherEmail": "[variables('publisherEmail')]",
        "publisherName": "[variables('publisherName')]"
      },
      "sku": {
        "name": "[variables('skuName')]"
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "location": "[resourceGroup().location]"
    },
    {
      "name": "[variables('storageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-02-01",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "location": "[resourceGroup().location]",
      "resources": [
        {
          "type": "blobServices/containers",
          "apiVersion": "2019-06-01",
          "name": "[concat('default/', variables('containerName'))]",
          "properties": {
            "publicAccess": "None"
          },
          "dependsOn": [
            "[variables('storageName')]"
          ]
        }
      ]
    },
    {
      "name": "[variables('keyVaultName')]",
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId":"[reference(resourceId('Microsoft.ApiManagement/service',variables('apimName')), '2019-01-01','Full').identity.principalId]",
            "permissions": {
              "secrets": [
                "list",
                "get"
              ]
            }
          }
        ],
        "enabledForDeployment": true,
        "enabledForTemplateDeployment": true,
        "enableSoftDelete": true,
        "enableRbacAuthorization": false
      },
      "resources": []
    }
  ],
  "outputs": {
  }
}