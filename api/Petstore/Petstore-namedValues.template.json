{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    },
    "NamedValues": {
      "type": "object"
    }
  },
  "resources": [
    {
      "properties": {
        "tags": [],
        "secret": true,
        "displayName": "api-key",
        "value": "[parameters('NamedValues').apikey]"
      },
      "name": "[concat(parameters('ApimServiceName'), '/api-key')]",
      "type": "Microsoft.ApiManagement/service/properties",
      "apiVersion": "2019-01-01"
    }
  ]
}